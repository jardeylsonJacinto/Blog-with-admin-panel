<%- include("../../partials/header.ejs") %>

  <div class="container">
    <hr>
    <div class="card mt-5">
      <div class="card-header">
        <h2>Login de admin</h2>
      </div>
      <div class="card-body">
        <form action="/authenticate" method="POST">
          <input class="form-control" name="email" type="email" placeholder="email@exemplo.com"><br>
          <input class="form-control" name="password" type="password" placeholder="insira a sua senha"><br>
          <button type="submit" class="btn btn-success btn-block">Logar</button>
          <a type="submit" href="/" class="btn btn-danger btn-block">Voltar</a>
        </form>
      </div>
    </div>
  </div>

